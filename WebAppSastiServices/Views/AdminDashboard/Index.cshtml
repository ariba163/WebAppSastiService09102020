<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@if (message == "LogInSuccess")
{
    <script type="text/javascript">
        swal({
            title: "Login successful !",
            icon: "success",
        });
    </script>
}
else if (message == "InvoiceSuccess")
{
    <script type="text/javascript">
        swal({
            title: "Invoice saved !",
            icon: "success",
        });
    </script>
}
else if (message == "RegisterSuccess")
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        swal({
            title: "Register Successful",
            icon: "success",
        });
    </script>
}
else if (message == "AdminSelctOpt")
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        swal({
            title: "Kindly select category from Vendor Menu",
            icon: "warning",
        });
    </script>
}
