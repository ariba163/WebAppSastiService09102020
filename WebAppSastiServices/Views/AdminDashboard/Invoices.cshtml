@model WebAppSastiServices.Models.DB.TRNInvoice

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_LayoutDashboardAdmin.cshtml";
}


<div class="modal fadeIn" id="InvoicesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="background:#61616161;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <!-- form start -->
                <!-- form end -->
            </div>
        </div>
    </div>
</div>


<!-- start page inner -->
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Dashboard</h3>
    </div>
    <!-- start page main wrapper -->
    <div id="main-wrapper">


        <!-- Row -->
        <div class="row">

            <div class="col-lg-12 col-md-12">
                <div class="card card-white">
                    <div class="card-heading clearfix">
                        <h4 class="card-title">Invoices</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive invoice-table">
                            <table id="Invoices" class="display" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Invoice#</th>
                                        <th>Order#</th>
                                        <th>Customer Name</th>
                                        <th>Customer Contact</th>
                                        <th>Services</th>
                                        <th>Products</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <div id="ajax-loader" class="LockOn" style="display:none">
                                    </div>

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->

    </div>
    <!-- end page main wrapper -->
    <div class="page-footer">
        <p>
            Copyright &copy;
            <script>document.write(new Date().getFullYear())</script> Kaam Waley All rights reserved.
        </p>
    </div>
</div>
<!-- end page inner -->

@section scripts{

    <!-- DataTable scripts   -->

    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script>



        $(document).ready(function () {
            var Table = $("#Invoices").DataTable();

            //not take time on first load------start
            var count = 0;
            if (count == 0) {
                ajax();
                count++;
            }
            //not take time on first load------end


            function ajax() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("InvoicesData")',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                "beforeSend": function () { $('#ajax-loader').show() },
                "complete": function () { $('#ajax-loader').hide() },
                success: function (Requests) {

                console.log(Requests);

            Requests.map((item, index) => {

                Table.row.add([
                    item.ID,
                    item.OrderID,
                    item.CustomerName,
                    item.CustomerContact,
                    item.Services,
                    item.Products
                ]).draw(false);
            });

                },
                error: function (xhr, status) {
                    console.log(xhr, status);
                }
            });
            }
            //Auto Refresh Datatable after 10 seconds---start
            setInterval(
                function () {
                    Table.clear().draw();
                    ajax();
                }
                , 120000);

            //Auto Refresh Dataatble after 10 seconds---end
        });

    </script>
}


