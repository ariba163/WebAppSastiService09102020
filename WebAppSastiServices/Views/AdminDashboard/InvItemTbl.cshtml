@model IEnumerable<WebAppSastiServices.Models.DB.TRNCustomerOrders_STPProductItems>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InvItemTbl</title>
</head>
<body>
    <table class="table table-bordered" id="ItemTable">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Model No</th>
                <th>Item Charges</th>
                <th>Qty</th>
                <th></th>
            </tr>
            @if (Model != null)
            {
                int price = 0;
                int count = 1;
                foreach (var item in Model)
                {
        <tr>
            <td>@item.STPServiceProductItem.ServiceProductName</td>
            <td>@item.STPServiceProductItem.ServiceModelNo</td>
            <td>@item.STPServiceProductItem.SellingPrice</td>
            <td>@item.QTY</td>
            <td><a class="btn bg-danger rounded-circle text-light" style="font-size:18px;font-weight:600;" onclick="DeleteTblItem(@item.ID,@item.STPServiceProductItem.SellingPrice,this)" id="btnMinus"> - </a></td>
            @{
                price += Convert.ToInt32(item.STPServiceProductItem.SellingPrice);
            }

        </tr>
                    count++;
                }

                <p style="display:none;" id="itemRate">@price</p>
            }
        </thead>
        <tbody>
        </tbody>
    </table>
</body>
</html>
