@model WebAppSastiServices.Models.DB.STPProductList
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.ImageOne" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.ImageOne" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.ImageOne" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <p>Product#: <span class="float-right text-black-50">@Model.ID </span></p>
            <p>ProductName: <span class="float-right text-black-50">@Model.ProductName </span></p>
            <p>Short Description <span class="float-right text-black-50">@Model.ProductShortDescription </span></p>
            <p>Product Type: <span class="float-right text-black-50">@Model.STPProductType.ProductTypeName</span></p> 
            <p>Product Price: <span class="float-right text-black-50">@Model.ProductPrice</span></p>
            <p>Discounted Amount: <span class="float-right text-black-50">@Model.DiscountedAmount</span></p>
            <p>Created Date: <span class="float-right text-black-50">@Model.CreatedDate</span></p>
        </div>
        <div class="col-md-6">
            <p>Details: <span class="float-right text-black-50">@Html.Raw(HttpUtility.HtmlDecode(@Model.LongDescription))</span></p>
           
        </div>
    </div>
</body>
</html>
