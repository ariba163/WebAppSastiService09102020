@model WebAppSastiServices.Models.DB.STPServiceProductItem
@{
    ViewBag.Title = "GeneratorsEditItems";
    Layout = "~/Views/Shared/_LayoutDashboardVendor.cshtml";
    string message = ViewBag.Message;
}
@if (message == "brandAdd")
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        //swal("Order sent successfully", "", "success");
        swal({
            title: "New product brand add successfully",
            icon: "success",
        });
    </script>
}
else if (message == "brandAlready")
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        swal({
            title: "This brand is already added",
            icon: "info",
        });
    </script>
}
<!-- start page inner -->
<div class="page-inner">
    <div class="page-title">
        <div class="page-title">
            <h3 class="breadcrumb-header">Add New Product Item</h3>
        </div>
        <!-- start page main wrapper -->
        <div id="main-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-white">
                        <div class="card-body">
                            <div id="rootwizard">
                                @*<div class="progress progress-sm m-t-sm">
                                        <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                        </div>
                                    </div>*@
                                @using (Html.BeginForm("CreateItems", "VendorDashboard", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    <div>
                                        <div class=" fade show active" id="home3">
                                            <div class="row m-b-lg">
                                                <div class="col-md-12">
                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            @Html.LabelFor(model => model.ServiceProductName, "Service Product Name", htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.ServiceProductName, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                            @Html.ValidationMessageFor(model => model.ServiceProductName, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-6">

                                                            @Html.LabelFor(model => model.ServiceModelNo, "Service Model No", htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.ServiceModelNo, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                            @Html.ValidationMessageFor(model => model.ServiceModelNo, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            @Html.LabelFor(model => model.CostPrice, "Cost Price", htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.CostPrice, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                            @Html.ValidationMessageFor(model => model.CostPrice, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-6">

                                                            @Html.LabelFor(model => model.SellingPrice, "Selling Price", htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.SellingPrice, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                            @Html.ValidationMessageFor(model => model.SellingPrice, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(model => model.FuelTypeId, "Fuel Type", htmlAttributes: new { @class = "control-label" })
                                                            @Html.DropDownList("FuelTypeId", (SelectList)ViewBag.FuelType, "Select Fuel Type", htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.FuelTypeId, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(model => model.UnitTypeId, "Unit Type", htmlAttributes: new { @class = "control-label" })
                                                            @Html.DropDownList("UnitTypeId", (SelectList)ViewBag.UnitType, "Select Unit Type", htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.UnitTypeId, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(model => model.STPProductBrandID, "Service Product Brand", htmlAttributes: new { @class = "control-label" })
                                                            @Html.DropDownList("STPProductBrandID", (SelectList)ViewBag.ProductBrand, "Select Product Brand", htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.STPProductBrandID, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            @Html.LabelFor(model => model.ServiceProductDescription, "Service Product Description", htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.ServiceProductDescription, new { htmlAttributes = new { @class = "form-control input-md", @row = "3" } })
                                                            @Html.ValidationMessageFor(model => model.ServiceProductDescription, "", new { @class = "text-danger" })
                                                        </div>
                                                        @*<div class="form-group col-md-12">
                                                                @Html.LabelFor(model => model.ImageFilePath, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                <div class="col-md-10">
                                                                    @Html.EditorFor(model => model.ImageFilePath, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                                                                    @Html.ValidationMessageFor(model => model.ImageFilePath, "", new { @class = "text-danger" })
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="col-md-offset-2 col-md-10 text-success">
                                                                        @ViewBag.Message
                                                                    </div>
                                                                </div>
                                                            </div>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <ul class="pagination wizard">
                                            <li class="previous"><a href="#" class="btn btn-outline-primary">Previous</a></li>
                                            <li class="next ml-auto"><button href="#" type="submit" class="btn btn-outline-primary">Add</button></li>
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="page-title">
                        <h3 class="breadcrumb-header">Add New Product Brand</h3>
                    </div>
                    @{Html.RenderAction("AddProductBrand");}
                </div>
            </div>
            <!-- Row -->
        </div>
        <!-- end page main wrapper -->
        <div class="page-footer">
            <p>
                Copyright &copy;
                <script>document.write(new Date().getFullYear())</script> Kaam Waley All rights reserved.
            </p>
        </div>
    </div>

    <script src="~/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</div>
<!-- end page inner -->
