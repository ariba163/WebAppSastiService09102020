@model WebAppSastiServices.Models.DB.STPService
@{
    ViewBag.Title = "EditServices";
    Layout = "~/Views/Shared/_LayoutDashboardACVendor.cshtml";
}
<!-- start page inner -->
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Add Service</h3>
    </div>
    <!-- start page main wrapper -->
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-white">
                    <div class="card-body">

                        <div id="rootwizard">
                            @using (Html.BeginForm("CreateServices", "VendorDashboard", FormMethod.Post, new { @enctype = "multipart/form-data" })) {
                                                 @Html.AntiForgeryToken()
                                                     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                     <div class="row m-b-lg">
                                                         <div class="col-md-12">
                                                             <div class="row">
                                                                 <div class="form-group col-md-6">
                                                                     @Html.LabelFor(model => model.ServiceName, "Service Name", htmlAttributes: new { @class = "control-label" })
                                                                     @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                                     @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                                                                 </div>
                                                                 <div class="form-group col-md-6">
                                                                     @Html.LabelFor(model => model.ServiceDescrption, "Service Descrption", htmlAttributes: new { @class = "control-label" })
                                                                     @Html.EditorFor(model => model.ServiceDescrption, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                                     @Html.ValidationMessageFor(model => model.ServiceDescrption, "", new { @class = "text-danger" })
                                                                 
                                                                 </div>
                                                                 <div class="form-group col-md-6">
                                                                     @Html.LabelFor(model => model.FuelTypeId, "Fuel Type", htmlAttributes: new { @class = "control-label" })
                                                                     @Html.DropDownList("FuelTypeId", (SelectList)ViewBag.FuelType, htmlAttributes: new { @class = "form-control" })
                                                                     @Html.ValidationMessageFor(model => model.FuelTypeId, "", new { @class = "text-danger" })
                                                                 </div>
                                                                 <div class="form-group col-md-6">
                                                                     @Html.LabelFor(model => model.UnitTypeId, "Unit Type", htmlAttributes: new { @class = "control-label" })
                                                                     @Html.DropDownList("UnitTypeId", (SelectList)ViewBag.UnitType, htmlAttributes: new { @class = "form-control" })
                                                                     @Html.ValidationMessageFor(model => model.UnitTypeId, "", new { @class = "text-danger" })
                                                                  </div>
                                                                 <div class="form-group col-md-12">
                                                                     @Html.LabelFor(model => model.ServiceRate, "Service Rate", htmlAttributes: new { @class = "control-label" })
                                                                     @Html.EditorFor(model => model.ServiceRate, new { htmlAttributes = new { @class = "form-control input-md" } })
                                                                     @Html.ValidationMessageFor(model => model.ServiceRate, "", new { @class = "text-danger" })
                                                                 </div>
                                                             </div>
                                                         </div>
                                                     </div>
                                                 <ul class="pagination wizard">
                                                     <li class="previous"><a href="#" class="btn btn-outline-primary">Previous</a></li>
                                                     <li class="next ml-auto"><button href="#" type="submit" class="btn btn-outline-primary">Add</button></li>
                                                 </ul>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->
    </div>
    <!-- end page main wrapper -->
    <div class="page-footer">
        <p>
            Copyright &copy;
            <script>document.write(new Date().getFullYear())</script> Kaam Waley All rights reserved.
        </p>
    </div>
</div>
<!-- end page inner -->
