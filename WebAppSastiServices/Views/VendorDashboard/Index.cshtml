@section scripts{
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- DataTable scripts   -->
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script>

   
        $(document).ready(function () {

            var Table = $("#ACOrders").DataTable();

            
            //not take time on first load------start
            var count = 0;
            if (count == 0) {
                ajax();
                count++;
            }
            //not take time on first load------end


            function ajax() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("LatestActOrders")',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                "beforeSend": function () { $('#ajax-loader').show() },
                "complete": function () { $('#ajax-loader').hide() },
                success: function (orders) {
                    //console.log(orders);



                    orders.map((item, index) => {
                        Table.row.add([
                            item.OrderId,
                            item.CustomerName,
                            item.Contact,
                            item.Address,
                            item.Description,
                            item.TimeRange,
                            item.preferredDate,
                            item.status,
                            item.btns
                        ]).draw(false);
                    });
                },
                error: function (xhr, status) {
                    console.log(xhr, status);
                }
            });

        }
            
            ///Auto Refresh Datatable after 10 seconds---start
            setInterval(
                function () {
                    Table.clear().draw();
                    ajax();
                }
                , 120000);
            
            //Auto Refresh Datatable after 10 seconds---end
             });

       function OpenDetailForm(ID) {

            var id = ID;
            //alert(id);
            //alert(ID);
            $('#OrderModal .modal-body').html('Loading.....');
            $('#OrderModal .modal-title').html('Details:');
            var options = { "backdrop": "static", keyboard: true };
            $('#OrderModal').modal(options);
            $('#OrderModal').modal('show');
            $.ajax({
                type: "GET",
                url: '/AdminDashboard/OrderDetails',
                contentType: "application/json; charset=utf-8",
                data: { "ID": id },
                datatype: "html",
                "beforeSend": function () { $('#ajax-loader').show() },
                "complete": function () { $('#ajax-loader').hide() },
                success: function (data) {
                    //$('#exampleModal .ajax-loader').hide();
                    $('#OrderModal .modal-body').html(data);
                },
                error: function (xhr, status) {
                    $('#OrderModal ajax-loader').hide(),
                        $.notify(status, "error");
                }
            });
        }
        
       function AvailOrder(ID) {

            var id = ID;
            $('#OrderModal .modal-body').html('Loading.....');
            $('#OrderModal .modal-title').html('Are U Sure U Want to Avail This Order?');
            var options = { "backdrop": "static", keyboard: true };
