@model WebAppSastiServices.Models.ViewModel.GetInTouch
@{
    Layout = null;
}

@using (Html.BeginForm("pvGetInTouch", "Home", FormMethod.Post, new { }))
{
    <div class="quform-elements">

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">

            <!-- Begin Text input element -->
            <div class="col-md-6">
                <div class="quform-element form-group">
                    <div class="quform-input">
                        @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-md" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <!-- End Text input element -->
            <!-- Begin Text input element -->
            <div class="col-md-6">
                <div class="quform-element form-group">
                    <div class="quform-input">
                        @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-md" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- End Text input element -->
            <!-- Begin Text input element -->
            <div class="col-md-6">
                <div class="quform-element form-group">
                    <div class="quform-input">
                        @Html.LabelFor(model => model.Subject, "Subject", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control input-md" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <!-- End Text input element -->
            <!-- Begin Text input element -->
            <div class="col-md-6">
                <div class="quform-element form-group">
                    <div class="quform-input">
                        @Html.LabelFor(model => model.ContactNo, "Contact No", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control input-md" } })
                        @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <!-- End Text input element -->
            <!-- Begin Textarea element -->
            <div class="col-md-12">
                <div class="quform-element form-group">
                    <div class="quform-input">
                        @Html.LabelFor(model => model.Message, "Tells us your query !", htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control input-md", @rows = "5" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- End Textarea element -->
            <!-- Begin Submit button -->
            <div class="col-md-12">
                <div class="quform-submit-inner">
                    <button class="butn" type="submit"><span>Submit comment</span></button>
                </div>
            </div>
            <!-- End Submit button -->

        </div>

    </div>
}
